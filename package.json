{
  "name": "micugl",
  "version": "0.0.3",
  "description": "Micu gl - Small React shader library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./examples": {
      "types": "./dist/examples/index.d.ts",
      "import": "./dist/examples/index.mjs",
      "require": "./dist/examples/index.js"
    },
    "./examples/Marble": {
      "types": "./dist/examples/Marble/index.d.ts",
      "import": "./dist/examples/Marble/index.mjs",
      "require": "./dist/examples/Marble/index.js"
    },
    "./examples/SimpleRipple": {
      "types": "./dist/examples/SimpleRipple/index.d.ts",
      "import": "./dist/examples/SimpleRipple/index.mjs",
      "require": "./dist/examples/SimpleRipple/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-dom": "^18.0.0 || ^19.0.0",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.3"
  }
}
